#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path("../../", __FILE__) + "/lib"
require 'config'

blueprint_name = File.basename($0)

qualified_name = ARGV.shift 

qualified_name or abort "usage: config-create-pattern NAME"

category, name = qualified_name.split("/")
(category && name) or abort "Name must contain two parts separated by a slash"

Config.log_to $stdout
Config.blueprint(blueprint_name) do
  add Config::Meta::PatternCategory do |p|
    p.root = File.expand_path(".")
    p.name = category
  end
end
Config.blueprint(blueprint_name) do
  add Config::Meta::Pattern do |p|
    p.root = File.expand_path(".")
    p.category = category
    p.name = name
  end
end
