#!/usr/bin/env ruby

require 'config'

Config.log_to $stdout

project = Config.project

fqn = ARGV.shift || project.data_dir.fqn

abort "Missing FQN to identify the Node" unless fqn

project.update_node(fqn)
project.require_all
project.data_dir.accumulation = project.execute_node(fqn, project.data_dir.accumulation)

