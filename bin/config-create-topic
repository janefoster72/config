#!/usr/bin/env ruby

require 'config'

blueprint_name = File.basename($0)

name = ARGV.shift 
name or abort "usage: config-create-topic NAME"

Config.log_to $stdout
Config.blueprint(blueprint_name) do
  add Config::Meta::PatternTopic do |p|
    p.root = File.expand_path(".")
    p.name = name
  end
end

