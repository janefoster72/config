#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path("../../", __FILE__) + "/lib"
require 'config'

usage = "usage: config-try-blueprint BLUEPRINT_NAME CLUSTER_NAME"
blueprint_name = ARGV.shift
blueprint_name or abort usage

cluster_name = ARGV.shift

Config.log_to $stdout
project = Config::Project.new(File.expand_path("."))
project.try_blueprint(blueprint_name, cluster_name)
