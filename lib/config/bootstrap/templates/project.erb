mkdir -p /etc/config

# TODO: should specify the git binary to use?

if [ ! -f project ]; then
  echo '[cloning project: <%= git_uri %>]'
  cd /etc/config
  git clone <%= git_uri %> project
else
  echo '[project exists]'
fi

cd project

echo '[initializing at: <%= git_ref %>]'
git reset --hard <%= git_ref %>

echo '[starting config-run]'
bundle-config exec config-run
