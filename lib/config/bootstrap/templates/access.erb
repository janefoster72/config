set -e

mkdir -p /root/.ssh
chmod 700 /root/.ssh

if [ -f /root/.ssh/config ]; then
  rm /root/.ssh/config
fi

<% ssh_configs.each do |config| %>
echo '<%= config %>' >> /root/.ssh/config

<% end %>

chmod 600 /root/.ssh/config

<% ssh_keys.each do |path, content| %>
echo '<%= content %>' > <%= path %>
chmod 600 <%= path %>

<% end %>

