set -e

mkdir -p /root/.ssh
chmod 700 /root/.ssh

(
cat <<'CFG'
Host <%= ssh_host %>
  Port <%= ssh_port %>
  User <%= ssh_user %>
  PreferredAuthentications publickey
  IdentityFile /root/.ssh/id_for_config_git
CFG
) > /root/.ssh/config

chmod 600 /root/.ssh/config

echo '<%= ssh_key %>' > /root/.ssh/id_for_config_git

chmod 600 /root/.ssh/id_for_config_git
