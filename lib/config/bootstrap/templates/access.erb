set -e

mkdir -p /root/.ssh
chmod 700 /root/.ssh

(
cat <<'CFG'
Host <%= ssh_host %>
  Port <%= ssh_port %>
  User <%= ssh_user %>
  PreferredAuthentications publickey
  IdentityFile /etc/config/git-ssh-key
CFG
) > /root/.ssh/config

chmod 600 /root/.ssh/config

echo '<%= ssh_key %>' > /etc/config/git-ssh-key

chmod 600 /etc/config/git-ssh-key
